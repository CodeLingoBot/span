[Unit]
Description=GitLab webhook receiver for span SOLR index reviews.
Documentation=man:span(1) http://www.github.com/miku/span Config at ~/.config/span/span.json
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root
ExecStart=/usr/sbin/span-webhookd -logfile=/var/log/span-webhookd.log
Restart=on-failure

